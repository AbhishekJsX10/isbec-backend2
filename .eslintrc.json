{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "no-console": "off",
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "max-len": ["error", { "code": 120 }]
    }
}
